@{
    ViewData["Title"] = "Home Page";
}

<script>
    function funBegin() {
        alert("Start ajax");
    }

    function funSuccess(data) {
        alert("Ajax completed, recieved:\n" + data);
        console.log(data);
    }

    function funComplete(request, status) {
        alert("Status:\n" + status);
    }
</script>

